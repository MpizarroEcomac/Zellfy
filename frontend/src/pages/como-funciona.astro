---
import BaseLayout from '../layouts/BaseLayout.astro';
import TimelineStep from '../components/TimelineStep.vue';

const steps = [
  { number: 1, title: 'Publicidad y Atracción', description: 'Lanza campañas digitales segmentadas en Google, Meta, TikTok y LinkedIn. Zellfy captura automáticamente cada interacción.', color: '#00BFFF', icon: '📢' },
  { number: 2, title: 'Captura del Lead', description: 'Formularios inteligentes y detección automática. Cada lead ingresa al CRM con fuente, campaña e interés identificado.', color: '#00C48C', icon: '🎯' },
  { number: 3, title: 'Atención Inicial', description: 'Respuesta instantánea vía WhatsApp, SMS o email. Mensajería automatizada con IA o agente humano según necesidad.', color: '#00BFFF', icon: '💬' },
  { number: 4, title: 'Oferta y Educación', description: 'Información guiada del producto o servicio. Catálogos digitales, videos y contenido personalizado según perfil.', color: '#00C48C', icon: '📚' },
  { number: 5, title: 'Seguimiento', description: 'Recontacto automatizado, calendarización de reuniones y remarketing inteligente. Sin perder ningún cliente potencial.', color: '#00BFFF', icon: '🔄' },
  { number: 6, title: 'Cierre / Compra', description: 'Acompañamiento durante la decisión. Propuestas digitales, cotizaciones y aprobaciones en tiempo real.', color: '#00C48C', icon: '✅' },
  { number: 7, title: 'Gestión Documental', description: 'Carpeta digital, revisión de antecedentes, créditos, escrituras. Firma electrónica y Clave Única integrada.', color: '#00BFFF', icon: '📄' },
  { number: 8, title: 'Entrega y Postventa', description: 'Seguimiento post compra, encuestas de satisfacción, upselling y fidelización. El ciclo se cierra y comienza de nuevo.', color: '#00C48C', icon: '🎁' }
];
---

<BaseLayout title="Cómo Funciona - Zellfy" description="Descubre el flujo completo de Zellfy en 8 etapas que transforman tu proceso de ventas.">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-green-50 py-20 px-6">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6" style="color: var(--color-graphite);">
        Cómo Funciona Zellfy
      </h1>
      <p class="text-2xl max-w-4xl mx-auto" style="color: var(--color-graphite); font-family: var(--font-secondary);">
        Del anuncio al cierre. Del cierre al financiamiento. <strong>Todo fluye.</strong>
      </p>
    </div>
  </section>

  <!-- Timeline de 8 etapas -->
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-5xl">
      <h2 class="text-4xl font-bold text-center mb-6" style="color: var(--color-graphite);">
        El Flujo Real de una Venta
      </h2>
      <p class="text-xl text-center mb-16 max-w-3xl mx-auto" style="color: #6b7280; font-family: var(--font-secondary);">
        En Zellfy, cada cliente tiene su propio flujo. Tú solo observas cómo avanza.
      </p>
      
      <div class="space-y-12">
        {steps.map(step => (
          <TimelineStep
            client:visible
            number={step.number}
            title={step.title}
            description={step.description}
            color={step.color}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Aplicaciones por Rubro -->
  <section class="py-20 px-6 bg-gradient-to-br from-blue-50 to-violet-50">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold text-center mb-12" style="color: var(--color-violet);">
        Casos de Aplicación
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h4 class="font-bold text-xl mb-3" style="color: var(--color-blue-electric);">🏢 Inmobiliario</h4>
          <p class="text-gray-600">Captura leads de portales, automatiza visitas y gestiona documentación de propiedades.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h4 class="font-bold text-xl mb-3" style="color: var(--color-green-mint);">🚗 Automotriz</h4>
          <p class="text-gray-600">Gestiona test drives, cotizaciones y financiamiento integrado con bancos.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h4 class="font-bold text-xl mb-3" style="color: var(--color-violet);">💳 Créditos</h4>
          <p class="text-gray-600">Evalúa clientes, automatiza evaluaciones crediticias y aprobaciones en minutos.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h4 class="font-bold text-xl mb-3" style="color: var(--color-blue-electric);">🛒 E-commerce</h4>
          <p class="text-gray-600">Recupera carritos abandonados, segmenta clientes y optimiza conversión.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 px-6 text-center">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold mb-6" style="color: var(--color-violet);">
        ¿Listo para automatizar tu proceso de ventas?
      </h2>
      <a href="/contacto" class="inline-block px-8 py-4 rounded-full text-white font-bold text-lg transition hover:opacity-90 shadow-lg" style="background-color: var(--color-blue-electric);">
        Solicitar Demo
      </a>
    </div>
  </section>
</BaseLayout>
