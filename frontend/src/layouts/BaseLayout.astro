---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Zellfy.ai - Conecta. Gestiona. Cierra." } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      :root {
        --color-blue-electric: #00BFFF;
        --color-green-mint: #00C48C;
        --color-violet: #6C63FF;
        --color-gray-smoke: #F5F6FA;
        --font-primary: 'Manrope', sans-serif;
        --font-secondary: 'Poppins', sans-serif;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: var(--font-primary);
        background-color: #ffffff;
        color: #1a1a1a;
      }
    </style>
  </head>
  <body>
    <header class="bg-white shadow-sm fixed w-full top-0 z-50">
      <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div class="flex items-center space-x-2">
          <span class="text-2xl font-bold" style="color: var(--color-blue-electric);">Zellfy</span>
          <span class="text-sm" style="color: var(--color-violet);">.ai</span>
        </div>
        <ul class="hidden md:flex space-x-8">
          <li><a href="/" class="hover:text-blue-500 transition">Inicio</a></li>
          <li><a href="/como-funciona" class="hover:text-blue-500 transition">Cómo Funciona</a></li>
          <li><a href="/soluciones" class="hover:text-blue-500 transition">Soluciones</a></li>
          <li><a href="/pricing" class="hover:text-blue-500 transition">Precios</a></li>
          <li><a href="/casos" class="hover:text-blue-500 transition">Casos</a></li>
          <li><a href="/contacto" class="hover:text-blue-500 transition">Contacto</a></li>
        </ul>
        <a href="/contacto" class="inline-block px-6 py-2 rounded-full text-white font-semibold transition hover:opacity-90" style="background-color: var(--color-blue-electric);">
          Solicitar Demo
        </a>
      </nav>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-12 mt-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4" style="color: var(--color-blue-electric);">Zellfy.ai</h3>
            <p class="text-gray-400">Conecta. Gestiona. Cierra.</p>
          </div>
          <div>
            <h4 class="font-semibold mb-3">Producto</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/soluciones" class="hover:text-white transition">Soluciones</a></li>
              <li><a href="/pricing" class="hover:text-white transition">Precios</a></li>
              <li><a href="/casos" class="hover:text-white transition">Casos de Éxito</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-3">Empresa</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/nosotros" class="hover:text-white transition">Nosotros</a></li>
              <li><a href="/blog" class="hover:text-white transition">Blog</a></li>
              <li><a href="/contacto" class="hover:text-white transition">Contacto</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-3">Legal</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/privacidad" class="hover:text-white transition">Privacidad</a></li>
              <li><a href="/terminos" class="hover:text-white transition">Términos</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500">
          <p>&copy; 2025 Zellfy.ai. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
