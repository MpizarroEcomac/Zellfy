---
// Componente que retorna logos de marcas usando CDN de SimpleIcons
interface Props {
  name: string;
  size?: number;
}

const { name, size = 20 } = Astro.props;

// Mapping de nombres de marcas a SimpleIcons
const logoMap: Record<string, string> = {
  // Publicidad Digital
  'Google Ads': 'google',
  'Meta Business': 'meta',
  'TikTok Ads': 'tiktok',
  'LinkedIn Ads': 'linkedin',

  // CRMs y Ventas
  'HubSpot': 'hubspot',
  'Salesforce': 'salesforce',
  'Pipedrive': 'pipedrive',
  'Zoho CRM': 'zoho',

  // Comunicación
  'WhatsApp': 'whatsapp',
  'Twilio': 'twilio',
  'SendGrid': 'sendgrid',
  'Mailchimp': 'mailchimp',

  // Pagos y Finanzas
  'Transbank': 'transbank',
  'MercadoPago': 'mercadopago',
  'Stripe': 'stripe',
  'APIs Bancarias': 'bank',

  // Firma Electrónica
  'FirmaVirtual': 'docusign',
  'DocuSign': 'docusign',
  'Clave Única': 'shield',
  'HelloSign': 'docusign',

  // Productividad
  'Google Workspace': 'google',
  'Microsoft 365': 'microsoft',
  'Google Calendar': 'google',
  'Google Sheets': 'google',

  // Análisis y BI
  'Google Analytics': 'google',
  'Meta Pixel': 'meta',
  'Hotjar': 'hotjar',
  'Power BI': 'powerbi',

  // Automatización
  'Zapier': 'zapier',
  'Make': 'make',
  'Webhooks': 'webhook',
  'API REST': 'api',

  // Cloud Storage
  'Google Drive': 'googledrive',
  'OneDrive': 'onedrive',
  'Dropbox': 'dropbox',
  'AWS S3': 'amazonaws',

  // Validación y Verificación
  'Equifax': 'equifax',
  'Experian': 'experian',
  'Fintoc': 'fintoc',
  'Regcheq': 'regcheq',

  // ERPs y Contabilidad
  'SAP Business One': 'sap',
  'Microsoft Dynamics': 'microsoft',
  'Softland': 'softland',
  'Epicor': 'epicor',

  // Videoconferencia e IA
  'Zoom': 'zoom',
  'Google Meet': 'googlemeet',
  'ChatGPT': 'openai',
  'Claude': 'anthropic',
};

const iconName = logoMap[name] || 'building';
const cdnUrl = `https://cdn.simpleicons.org/${iconName}/667EEA`;
---

<img 
  src={cdnUrl}
  alt={name}
  style={`width: ${size}px; height: ${size}px; display: inline-block;`}
  loading="lazy"
/>
